\& my $rv = Net::SSLeay::CTX_get_ex_new_index($argl, $argp, $new_func, $dup_func, $free_func);
\& # $argl \- (long) ???
\& # $argp \- (pointer) ???
\& # $new_func \- function pointer ??? (CRYPTO_EX_new *)
