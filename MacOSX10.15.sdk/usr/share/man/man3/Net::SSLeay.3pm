.Vb 10
\& my @keyusage = Net::SSLeay::P_X509_get_key_usage($cert);
\& # $cert \- value corresponding to openssl\*(Aqs X509 structure
\& #
\& # returns: list of key usage values which can be none, one or more from the following list:
\& #          "digitalSignature"
\& #          "nonRepudiation"
\& #          "keyEncipherment"
\& #          "dataEncipherment"
\& #          "keyAgreement"
\& #          "keyCertSign"
\& #          "cRLSign"
\& #          "encipherOnly"
\& #          "decipherOnly"
.Ve
